# Set and play the audio
test_sound.setSound(sounds, hamming=True)
test_sound.setVolume(1, log=False)
test_sound.seek(0)
t0 = test_sound.play()  # PTB-estimated onset time
trialClock = core.Clock()
trialClock.reset()
print(f"[DEBUG] test_sound.play() called â€” estimated audio onset: {t0 * 1000:.2f} ms")

